# =============================================
# IA VIDEO CREATOR — config.yaml.exemplo
# Copie para config.yaml e preencha suas chaves
# =============================================

# --- IA / LLM ---
llm:
  provider: ollama
  model: gemma2            # modelos disponíveis: gemma2, llama3.2, mistral, phi3
  base_url: http://localhost:11434
  temperature: 0.7
  max_tokens: 2000

# --- TTS ---
tts:
  # provider: qual motor TTS usar
  #   "chatterbox" — Chatterbox TTS Multilingual (padrão): Apache 2.0, qualidade superior,
  #                  suporte nativo a pt-BR via ChatterboxMultilingualTTS (language_id="pt")
  #                  Idiomas: ar, da, de, el, en, es, fi, fr, he, hi, it, ja, ko, ms,
  #                           nl, no, pl, pt, ru, sv, sw, tr, zh
  #   "xtts"       — Coqui XTTS v2: alternativa robusta, suporte nativo a pt-BR
  provider: chatterbox

  # Áudio de referência para clonagem (usado por ambos os providers)
  # Mínimo 5s, sem música de fundo. Arquivos longos OK (Chatterbox usa até 30s).
  voice_sample: assets/voices/minha_voz.wav
  speed: 1.0

  # ── Chatterbox TTS ──────────────────────────────────────────────────────
  chatterbox:
    exaggeration: 0.5      # intensidade da clonagem: 0.3=sutil | 0.5=natural | 0.7=forte
    cfg_weight: 0.5        # classifier-free guidance: 0.5 = equilíbrio naturalidade/fidelidade

  # ── XTTS v2 (usado apenas se provider: xtts) ────────────────────────────
  model: tts_models/multilingual/multi-dataset/xtts_v2
  language: pt             # código para XTTS v2 (não use pt-BR aqui)
  speaker: ""              # deixe vazio para auto-seleção
  output_format: wav
  generation:
    temperature: 0.65      # 0.5 = robótico/monótono | 0.65 = natural | 0.8+ = melódico/cantado
    top_k: 50
    top_p: 0.85
    repetition_penalty: 1.1

# --- Banco de Mídia ---
media:
  pexels_api_key: "SUA_CHAVE_PEXELS_AQUI"   # https://www.pexels.com/api/ (gratuito)
  max_images: 8
  max_videos: 3
  image_duration: 4
  preferred_orientation: landscape
  video_quality: hd

# --- APIs externas ---
apis: {}   # sem APIs adicionais por enquanto

# --- Trends ---
trends:
  max_trends: 15
  google_trends:
    enabled: true
    geo: BR
    timeframe: now 7-d
    keywords_seed:
      - inteligência artificial
      - tecnologia
      - ciência
      - astronomia
      - espaço
      - física
      - biologia
      - medicina
      - computação
  hackernews:
    queries:
      - artificial intelligence
      - space astronomy
      - science discovery
      - quantum computing
      - biology medicine
      - robotics
      - climate technology
    min_points: 50
  astronomia_rss:
    feeds:
      - url: "https://www.nasa.gov/rss/dyn/breaking_news.rss"
        nome: "NASA"
      - url: "https://spaceflightnow.com/feed/"
        nome: "SpaceFlightNow"

# --- Vídeo ---
video:
  resolution: [1920, 1080]
  fps: 30
  format: mp4
  codec: libx264
  audio_codec: aac
  bitrate: 4000k
  background_music_volume: 0.08   # 0 = sem música de fundo
  transition_duration: 0.5
  intro_duration: 2
  outro_duration: 3

# --- Thumbnail ---
thumbnail:
  width: 1280
  height: 720
  font_size_title: 72
  font_size_sub: 36
  text_color: "#FFFFFF"
  shadow_color: "#000000"
  overlay_opacity: 0.5

# --- Roteiro ---
script:
  language: pt-BR
  style: "Educativo, dinâmico e envolvente. Tom de curiosidade científica. Direto ao ponto."
  # duration_target: duração alvo do roteiro em segundos (campo opcional).
  # Prioridade: flag -d/--duracao > este campo > padrão interno (300s / 5 min).
  # Exemplos: 60 (short/reels), 120 (2 min), 300 (5 min), 600 (10 min long-form)
  duration_target: 300    # remova ou comente esta linha para usar o padrão (300s)
  sections:
    - gancho
    - contexto
    - desenvolvimento
    - implicacoes
    - conclusao

# --- Exportação ---
export:
  output_dir: ./export
  video_filename: video_final.mp4
  thumbnail_filename: thumbnail.jpg
  metadata_filename: metadata.json
  keep_temp_files: false

# --- Canal ---
channel:
  name: "Seu Canal Aqui"
  niche: "Ciência & Tecnologia"
  cta_subscribe: "Se inscreva no canal para mais conteúdos de ciência e tecnologia!"
  hashtags_base:
    - "#ciencia"
    - "#tecnologia"
    - "#inteligenciaartificial"
    - "#astronomia"
    - "#fisica"
    - "#inovacao"
